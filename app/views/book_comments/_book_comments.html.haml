- book.book_comments.each do |book_comment|
  #comments_error
    = render 'layouts/errors', obj: book_comment
  %tr
    %td
      = link_to(book_comment.user) do
        = image_tag book_comment.user.get_profile_image, size: "100x100"
        %br/
        = book_comment.user.name
    %td.p-2= book_comment.comment
    - if book_comment.user == current_user
      %td= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm"
